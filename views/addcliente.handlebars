<div class="container">
    <h1>Adicionar um novo cliente</h1>
    <form action="/clientes/insertcliente" method="POST" class="form">

        <label for="name">Nome</label>
        <input type="text" name="name" placeholder="Digite o nome">

        <label for="address">Endereço</label>
        <input type="text" name="address" placeholder="Digite o endereço">

        <label for="email">Email</label>
        <input type="email" name="email" placeholder="Digite o email">

        <label for="tel">Telefone</label>
        <input type="tel" name="tel" placeholder="Digite o telefone">
        <div class="actions">
            <input type="submit" id="action" value="Adicionar">
            <a href="/">Voltar</a>
        </div>
    </form>
</div>